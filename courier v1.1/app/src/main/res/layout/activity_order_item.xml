<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtExpressTimeTitle"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@color/title_backgroud"
            android:layout_height="wrap_content"
            android:text="@string/txt_expresstime"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/background_material_light"
            android:shadowColor="@color/main_item_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />
        <TextView
            android:layout_weight="3"
            android:background="@color/title_backgroud"
            android:id="@+id/txtExpressTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_expresstime"
            android:textSize="@dimen/title_fontsize"
            android:textStyle="bold"
            android:textColor="@color/background_material_light"
            android:shadowColor="@color/main_item_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="@dimen/item_fontsize"
            android:layout_height="wrap_content"
            android:text="@string/txt_payment" />
        <TextView
            android:layout_weight="3"
            android:textSize="@dimen/item_fontsize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPayment" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="@dimen/item_fontsize"
            android:layout_height="wrap_content"
            android:text="@string/txt_username" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="@dimen/item_fontsize"
            android:layout_height="wrap_content"
            android:id="@+id/txtContact" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="@dimen/item_fontsize"
            android:layout_height="wrap_content"
            android:text="@string/txt_addressinfo"/>
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="@dimen/item_fontsize"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddresss" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutControl"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPhoneCall"
            android:textColor="@color/btn_phonecall"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_phonecall"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"/>
        <Button
            android:id="@+id/btnModify"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_modify"
            android:textStyle="bold"
            android:textColor="@color/btn_modify"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:textStyle="bold"
            android:textColor="@color/btn_cancel"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"/>
        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/btnAction"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_action"
            android:text="@string/btn_action_new"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"/>
    </LinearLayout>

</LinearLayout>